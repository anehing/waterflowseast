<% provide :title, t('view.user.new.title') %>

<h4><%= t('view.user.new.title') %></h4>
<div class="row">
  <div class="small-12 columns nickname_format">
    <h1><%= t('view.user.new.nickname_format') %></h1>
    <p><%= t('view.user.new.first_char') %></p>
    <p><%= t('view.user.new.middle_chars') %></p>
    <p><%= t('view.user.new.last_char') %></p>
  </div>
</div>

<%= render 'shared/error_messages', object: @user %>
<%= form_for @user do |f| %>
  <fieldset>
    <%= f.hidden_field :invitation_token %>

    <div class="row">
      <div class="large-6 columns">
        <div class="row collapse">
          <div class="small-3 columns">
            <span class="prefix"><%= t('view.user.new.nickname') %></span>
          </div>
          <div class="small-9 columns">
            <%= f.text_field :nickname %>
          </div>
        </div>
      </div>
      <div class="large-6 columns">
        <div class="row collapse">
          <div class="small-3 columns">
            <span class="prefix"><%= t('view.user.new.email') %></span>
          </div>
          <div class="small-9 columns">
            <%= f.email_field :email %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <div class="row collapse">
          <div class="small-3 columns">
            <span class="prefix"><%= t('view.user.new.password') %></span>
          </div>
          <div class="small-9 columns">
            <%= f.password_field :password %>
          </div>
        </div>
      </div>
      <div class="large-6 columns">
        <div class="row collapse">
          <div class="small-3 columns">
            <span class="prefix"><%= t('view.user.new.password_confirmation') %></span>
          </div>
          <div class="small-9 columns">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="small-12 columns">
        <%= f.submit t('view.user.new.submit'), class: "button prefix sign-button" %>
      </div>
    </div>
  </fieldset>
<% end %>
