          <td><%= points_config :normal_day_sign_in %></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td>月初登录</td>
          <td><%= points_config :first_month_day_sign_in %></td>
          <td></td>
          <td></td>
