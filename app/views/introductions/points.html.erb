  <div id="points">
    <table>
      <thead>
        <tr>
          <th width="42%">事件</th>
          <th width="24%">奖励</th>
          <th width="10%">消耗</th>
          <th width="24%">补偿</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>注册帐号</td>
          <td><%= points_config :new_account %></td>
